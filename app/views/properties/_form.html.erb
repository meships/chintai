<%= form_with(model: property, local: true) do |form| %>
    <% if property.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>
  
        <ul>
          <% property.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%=form.label :name,"物件名"%><br>
      <%= form.text_field :name %>
    </div>
  
    <div class="field">
      <%=form.label :price,"賃料"%><br>
      <%= form.text_field :price %>円
    </div>
  
    <div class="field">
      <%=form.label :address,"住所"%><br>
      <%= form.text_field :address %>
    </div>
  
    <div class="field">
      <%=form.label :age,"築年数"%><br>
      <%= form.text_field :age %>年
    </div>
  
    <div class="field">
      <%=form.label :comment,"備考"%><br>
      <%= form.text_area :comment %>
    </div>
  
    <div class="line"></div>

    <hr>

    <%count=1%>
    <%=form.fields_for :nearest_stations do |nearest_station|%>
      <h3><%="最寄駅#{count}"%></h3>
      <%count+=1%>
      <%=nearest_station.label :line,"路線名"%><br>
      <%=nearest_station.text_field :line%><br>
      <%=nearest_station.label :station_name,"駅名"%><br>
      <%=nearest_station.text_field :station_name%><br>
      <%=nearest_station.label :walk_by,"徒歩分数"%><br>
      <%=nearest_station.text_field :walk_by%>分
    <%end%>
  
    <div class="actions">
      <%= form.submit "登録する" %>
    </div>
  <% end %>