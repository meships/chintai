<%= form_with(model: property, local: true) do |form| %>

    <%= form.label :"物件名" %>
    <%= form.text_field :name %>

    <%= form.label :"賃料" %>
    <%= form.number_field :price %>円

    <%= form.label :"住所" %>
    <%= form.text_field :address%>

    <%= form.label :"築年数" %>
    <%= form.number_field :age%>

    <%= form.label :"備考" %>
    <%= form.text_field :comment%>

    <hr>
    <% n = 0 %>
    <%= form.fields_for :nearest_stations do | nearest_station | %>
      <h2>最寄り駅<%= n += 1 %></h2>
        <%= nearest_station.label "路線名" %>
        <%= nearest_station.text_field :line %>
        <%= nearest_station.label "駅名" %>
        <%= nearest_station.text_field :station_name %>
        <%= nearest_station.label "徒歩分数" %>
        <%= nearest_station.text_field :walk_by %>
    <% end %>

    <div class="actions">
      <%= form.submit "登録する" %>
    </div>

<% end %>